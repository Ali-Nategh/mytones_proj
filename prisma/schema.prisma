generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String     @id @unique @default(uuid())
  username          String
  name              String
  lastname          String
  password          String
  age               Int?
  role              Role       @default(BASIC)
  created_at        DateTime   @default(now())
  updated_at        DateTime?  @default(now()) @updatedAt
  deleted_at        DateTime?
  personalPlaylists Playlist[]

  @@index([id])
}

model RefreshToken {
  id      String  @id @unique
  valid   Boolean @default(false)
  user_id String  @unique

  @@index([id])
  @@index([user_id])
}

model Otp {
  id         String   @id @unique @default(uuid())
  user_id    String   @unique
  otp        String
  created_at DateTime @default(now())

  @@index([user_id])
}

model Email {
  id         String   @id @unique @default(uuid())
  user_id    String   @unique
  email      String   @unique
  updated_at DateTime @default(now()) @updatedAt
  verified   Boolean  @default(false)

  @@index([user_id])
  @@index([email])
}

/////////////////////////////////////////////////////

model Favorites {
  id       String   @id @unique @default(uuid())
  user_id  String
  type     Type
  songs_id String[] @default([])
}

model Song {
  id             String    @id @unique @default(uuid())
  song_name      String
  file_path      String
  artist_id      String
  album_id       String?
  copyright_info String?
  ISRC           String?
  writers        String[]  @default([])
  engineers      String[]  @default([])
  producers      String[]  @default([])
  publisher      String?
  release_date   DateTime?
  genres         Genres[]  @default([])
  duration       String
}

model Playlist {
  id       String   @unique @default(uuid())
  name     String
  User     User?    @relation(fields: [user_id], references: [id])
  user_id  String   @unique
  songs_id String[] @default([])

  @@id([id, user_id])
}

model Artist {
  id        String   @id @unique @default(uuid())
  name      String
  albums_id String[] @default([])
  songs_id  String[] @default([])
}

model Album {
  id           String   @id @unique @default(uuid())
  name         String
  artist_id    String
  release_date DateTime
  genres       Genres[] @default([])
  songs_id     String[]
}

/////////////////////////////////////////////////////

enum Role {
  BASIC
  EDITOR
  ADMIN
}

enum Type {
  SONGS
  ARTISTS
  ALBUMS
  DOWNLOADS
}

enum Genres {
  POP
  COUNTRY
  ELECTRONIC
  BLUES
  ROCK
  HIPHOP
  JAZZ
  METAL
  INDIE
  DANCE
  SOUL
  LATIN
  KPOP
  DUBSTEP
  TECHNO
  FOLK
  INSTRUMENTAL
  EMO
  GOSPEL
  HOUSE
  RnB
  PSYCHEDELIC
  RAP
  DISCO
  PUNK
  COVER
  CLASSICAL
}

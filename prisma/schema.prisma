generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @unique @default(uuid())
  username    String
  name        String
  lastname    String
  password    String
  age         Int?
  role        Role      @default(BASIC)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @default(now()) @updatedAt
  deleted_at  DateTime?
  last_active DateTime? @updatedAt
  // personalPlaylists Playlist[]

  @@index([id])
}

model RefreshToken {
  id      String  @id @unique
  valid   Boolean @default(false)
  user_id String  @unique

  @@index([id])
  @@index([user_id])
}

model Otp {
  id         String   @id @unique @default(uuid())
  user_id    String   @unique
  otp        String
  created_at DateTime @default(now())

  @@index([user_id])
}

model Email {
  id         String   @id @unique @default(uuid())
  user_id    String   @unique
  email      String   @unique
  updated_at DateTime @default(now()) @updatedAt
  verified   Boolean  @default(false)

  @@index([user_id])
  @@index([email])
}

/////////////////////////////////////////////////////

model Favorites {
  id      String @id @unique @default(uuid())
  user_id String @unique
  type    Type
  // songs   Song[]
}

model Song {
  id             String   @id @unique @default(uuid())
  song_name      String
  artist_name    String
  album_name     String
  copyright_info String
  ISRC           String
  writers        String[]
  engineers      String[]
  producers      String[]
  publisher      String
  release_date   DateTime
  genres         Genres[]
  duration       String
}

model Playlist {
  id      String @id @unique @default(uuid())
  name    String
  user_id String @unique
  // songs   Song[]
}

model Artist {
  id   String @id @unique @default(uuid())
  name String
  // albums Album[]
  // songs   Song[]
}

model Album {
  id           String   @id @unique @default(uuid())
  name         String
  artist_name  String
  release_date DateTime
  genres       Genres[]
  // songs   Song[]
}

/////////////////////////////////////////////////////

enum Role {
  BASIC
  EDITOR
  ADMIN
}

enum Type {
  SONGS
  ARTISTS
  ALBUMS
  DOWNLOADS
}

enum Genres {

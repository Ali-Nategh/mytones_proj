generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @unique @default(uuid())
  username    String
  name        String
  lastname    String
  password    String
  age         Int?
  role        Role      @default(BASIC)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @default(now()) @updatedAt
  deleted_at  DateTime?
  last_active DateTime? @updatedAt

  @@index([id])
}

model RefreshToken {
  id      String  @id @unique
  valid   Boolean @default(false)
  user_id String  @unique

  @@index([id])
  @@index([user_id])
}

model Otp {
  id         String   @id @unique @default(uuid())
  user_id    String   @unique
  otp        String
  created_at DateTime @default(now())

  @@index([user_id])
}

model Email {
  id         String   @id @unique @default(uuid())
  user_id    String   @unique
  email      String   @unique
  updated_at DateTime @default(now()) @updatedAt
  verified   Boolean  @default(false)

  @@index([user_id])
  @@index([email])
}

enum Role {
  BASIC
  EDITOR
  ADMIN
}
